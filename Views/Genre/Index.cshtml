@model GenreViewModel
@{
    Layout = "_AdminLayout";
}
<div class="row">
    <div class="col-md-3 mt-3">
        <h3>Create Genre</h3>
        <hr>
        <form asp-controller="Genre" asp-action="GenreCreate" method="post">
            <div class="form-group">
                <label asp-for="GenreName"></label>
                <input asp-for="GenreName" class="form-control">
                <span asp-validation-for="GenreName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Submit</button>
        </form>
    </div>
    <div class="col-md-9 mt-3">
        <h3>Genre List</h3>
        <hr>
        <div class="row">
            <div class="col-md 12">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th style="width: 30px;">#</th>
                            <th>Name</th>
                            <th style="width: 40px;">Count</th>
                            <th style="width: 160px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Genres)
                        {
                            <tr>
                                <td>@item.GenreId</td>
                                <td>@item.GenreName</td>
                                <td>@item.Count</td>
                                <td>
                                    <a class="btn btn-sm btn-primary" asp-controller="Genre" asp-action="Edit"
                                    asp-route-id="@item.GenreId">Edit</a>
                                    <form asp-controller="Genre" asp-action="GenreDelete" style="display: inline;">
                                        <input type="hidden" name="genreId" value="@item.GenreId">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
