@model IEnumerable<Movie>
<!-- home -->
<section class="home home--bg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="home__title"><b>Sezon'un</b> En Yeni Filmler</h1>

                <button class="home__nav home__nav--prev" type="button">
                    <i class="icon ion-ios-arrow-round-back"></i>
                </button>
                <button class="home__nav home__nav--next" type="button">
                    <i class="icon ion-ios-arrow-round-forward"></i>
                </button>
            </div>

            <div class="col-12">
                <div class="owl-carousel home__carousel">
                    @foreach (var item in Model)
                    {
                        <div class="item">
                            <!-- card -->
                        <div class="card card--big">
                                <div class="card__cover">
                                    <img src="~/img/@item.ImageUrl" alt="@item.Name">
                                    <a href="#" class="card__play">
                                        <i class="icon ion-ios-play"></i>
                                    </a>
                                </div>
                                <div class="card__content">
                                    <h3 class="card__title"><a href="#">@item.Name</a></h3>
                                    <span class="card__category">
                                        <a href="#">@foreach (var i in item.Genres)
                                            {
                                                <a href="#">@i.Name</a>
                                            }</a>

                                    </span>
                                    <span class="card__rate"><i class="icon ion-ios-star"></i>@item.Imdb</span>
                                </div>
                            </div>
                            <!-- end card -->
                    </div>
                    }




                </div>
            </div>
        </div>
    </div>
</section>
<!-- end home -->